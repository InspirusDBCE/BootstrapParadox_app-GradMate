<!--================== STUDENT DEBT ==================-->
<section>
  <div class="studentLoan">
    <h1><i class="fas fa-calculator"></i>Loan Debt Calculator</h1>
    <form class="loanForm" action="/api/loan" method="post">
      <div class="formbox row">
        <div class="col formleft">
          <label for="principal">Loan Amount Borrowed</label>
          <input type="number" class="form-control" name="totalAmount" id="principal">

          <label for="interest">Interest Rate</label>
          <input type="number" class="form-control" name="interestRate" id="interest">

          <label for="duration">Total Duration (In Years)</label>
          <input type="number" class="form-control" name="numberOfYears" id="duration">

          <label for="margin">Margin Money</label>
          <input type="number" class="form-control" name="marginMoney" id="margin">
        </div>
        <div class="col formright">
          <label for="moratorium">Moratorium Period</label>
          <input type="number" class="form-control" name="moratorium" id="moratorium">

          <label for="paystatus">Payment Status</label>
          <select id="status" class="form-control" name="paymentStarted">
            <option value="true">Payment started</option>
            <option value="false">Payment not started</option>
          </select>

          <label for="currentyr">Current Year (Of Total Duration)</label>
          <input type="number" class="form-control" name="currentYear" id="currentyr">
          <input type="submit" class="btn btn-dark btn-lg submit-btn" name="enter" value="Enter">
        </div>
        <div class="col formdisplay">
          <p>Total Debt</p>
          <output name="result">₹ <%= totalDebt %> </output>
          <p>Current Debt</p>
          <output name="result">₹ <%= currentDebt %></output>
          <p>Emi</p>
          <output name="result">₹ <%= emi %></output>
        </div>
      </div>
  </div>
  <p class="note">Note: Calculated Result is indicative only.</p>
</section>

</form>
